{
  "name": "logger",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/logger/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/logger"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs logger {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/logger/browser"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "{workspaceRoot}/coverage/packages/logger/browser",
        "config": "{workspaceRoot}/packages/logger/vitest.browser.ts"
      }
    },
    "test-node": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/packages/logger/node"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "{workspaceRoot}coverage/packages/logger/node",
        "config": "{workspaceRoot}/packages/logger/vitest.node.ts"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/logger/**/*.ts",
          "packages/logger/package.json"
        ]
      }
    }
  },
  "tags": []
}
